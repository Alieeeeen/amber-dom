{
  "name": "amber-dom",
  "version": "0.0.6",
  "description": "A lightweight virtual dom with diffing & patching algorithm.",
  "main": "index.js",
  "scripts": {
    "build": "rollup --config rollup.config.build.js",
    "dev": "export NODE_ENV=development && karma start",
    "test": "export NODE_ENV=production && karma start --browsers ChromeHeadlessNoSandbox",
    "release-patch": "npm version patch && git push origin master --tags && npm publish",
    "release-minor": "npm version minor && git push origin master --tags && npm publish",
    "release-major": "npm version major && git push origin master --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alieeeeen/amber-dom.git"
  },
  "keywords": [
    "virtual-dom",
    "jsx",
    "virtual-hyperscript"
  ],
  "author": "alieeeeen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Alieeeeen/amber-dom/issues"
  },
  "homepage": "https://github.com/Alieeeeen/amber-dom#readme",
  "devDependencies": {
    "@metahub/karma-rollup-preprocessor": "^3.0.4",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "karma": "^2.0.0",
    "karma-babel-preprocessor": "^7.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^5.0.5",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-uglify": "^3.0.0"
  }
}
